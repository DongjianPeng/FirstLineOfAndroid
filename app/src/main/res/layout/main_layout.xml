<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/main_btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go HidView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/show_activity_life_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show acitivity life"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/show_widget_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show Widget View"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/show_layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show layout view"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/show_listview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show list view view"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/show_recycler_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show recycler view view"
        android:textAllCaps="false" />


</LinearLayout>